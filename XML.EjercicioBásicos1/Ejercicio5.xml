        <color_primavera>
            <haz>Haz verde medio</haz>
            <enves>Envés verde claro</enves>
        </color_primavera>
        <color_otoño>Ocre</color_otoño>
        <resistencia>Heladas fuertes (hasta -20ºC)</resistencia>
    </arbol>
    <arbol tipo="e">
        <nombre_latino>Quercus ilex</nombre_latino>
        <nombre_comun>Encina</nombre_comun>
