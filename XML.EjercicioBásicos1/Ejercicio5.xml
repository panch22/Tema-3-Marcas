        <arquitectura>
            <forma>Copa irregular.</forma>
            <estructura>Tronco principal irregular con bifurcaciones</estructura> 
        </arquitectura>
    </arbol>
    <arbol tipo="c">
        <nombre_latino>Ramaje tortuoso</nombre_latino>
