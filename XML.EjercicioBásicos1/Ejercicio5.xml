        <nombre_latino>Acer monspessulanum</nombre_latino>
        <nombre_comun>Arce de Montpellier, Arce menor</nombre_comun>
        <vegetacion>Caducifolio</vegetacion>
        <altura>de 6 a 10 metros</altura>
        <arquitectura>
            <forma>Copa esférica.</forma>
            <estructura>Tronco principal recto con bifurcaciones</estructura> 
        </arquitectura>
        <color_primavera>
            <haz>Haz verde brillante</haz>
            <enves>Envés brillante blanquecino</enves>
        </color_primavera>
        <resistencia>Heladas fuertes (hasta -15ºC)</resistencia>
    </arbol>
    <arbol tipo="b">
        <nombre_latino>Olea Europea</nombre_latino>
        <nombre_comun>Olivo</nombre_comun>
        <vegetacion>Perenne</vegetacion>
