            <haz>Haz verde oscuro</haz>
            <enves>Envés verde plateado</enves>
        </color_primavera>
        <resistencia>Heladas medias (hasta -10ºC)</resistencia>
    </arbol>
    <arbol tipo="d">
        <nombre_latino>Platanus orientalis</nombre_latino>
        <nombre_comun>Plátana</nombre_comun>
        <vegetacion>Caducifolio</vegetacion>
